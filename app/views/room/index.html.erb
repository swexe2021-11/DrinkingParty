<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<h1>Drinking Party</h1>
<p>
  <%= link_to '登録', new_user_path %>
</p>
<p>
<% if session[:login_uid] %>
  <p>
    <%= link_to 'ログアウト', top_logout_path %>
  </p>
  <p>
  <%= link_to '参加', '/' %>
  </p>
<% else %>
  <p>
  <%= link_to 'ユーザログイン', top_main_path %>
  </p>
<% end %>

<% if session[:login_uid2] %>
  <p>
    <%= link_to 'ログアウト(ホスト)', top2_logout_path %>
  </p>
  <p>
    <%= link_to 'ルーム作成', new_room_path %>
  </p>
<% else %>
  <%= link_to 'ホストでログイン', top2_main_path %>
<% end %>



<% @rooms.each do |r| %>
    <p>
        <%= r.title %>
        <%= image_tag "/get_image/#{@rooms.ids}" %>
        
        <% if session[:login_uid2] != @user %>
          <%= link_to 'chatを始める', chat_path(@user.id)%>
        <% end %>
    </p>
<% end %>

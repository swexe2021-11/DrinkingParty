<!DOCTYEP html>
<html>
  <head>
      <meta charset="utf-8"/>
  </head>
    <body>
      <div id = "user">
        <% if @room.errors.present? %>
        <h3>エラーがあります</h3>
          <% @room.errors.full_messages.each do |msg| %>
            <%= msg %><br>
          <% end %>
        <% end %>
        <h2>ルーム作成</h2>
          <%= form_for @room, url: {action: :create} do |f| %>
          <p>
            <a>タイトル <%= f.text_field :title %></a><br>
            <br><a>画像ファイル <%= f.file_field :file %></a>
          </p>
        <%= f.submit '作成' ,class: "button2"%>
        <% end %>
      </div>
    </body>
</html>

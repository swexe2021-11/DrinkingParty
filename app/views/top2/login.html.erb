<!DOCTYEP html>
<html>
  <head>
    <meta charset="utf-8"/>
  </head>
    <body>
      <div id = "login" >
        <h2>管理者ログイン</h2>
        <% if flash[:notice] %>
          <%= flash[:notice] %>
        <% end %>
        <%= form_tag top2_login_path, method: :post do %>
        <p>
          <a>ホストID　<%= text_field_tag :uid2 %></a><br>
          <a>パスワード　<%= password_field_tag :pass2 %></a> 
        </p>
          <%= submit_tag 'ログイン' %>
        <% end %>
      </div>
    </body>
</html>
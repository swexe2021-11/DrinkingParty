<!DOCTYPE html>
<html>
  <head>
    <title>DrinkingParty</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>Drinking Party</h1>
    <header>
          <nav>
            <ul>
              <li><%= link_to 'ユーザ登録', new_user_path , class:"link" %></li>
              <% if session[:login_uid] %>
                  <li><%= link_to 'ログアウト', top_logout_path , class:"link" %></li>
                <% else if session[:login_uid2] %>
                  <li><%= link_to 'ログアウト', top2_logout_path , class:"link" %></li>
                  <li><%= link_to 'ルーム作成', new_room_path , class:"link" %></li>
                <% else if %>
                  <li><%= link_to 'ホストでログイン', top2_main_path , class:"link" %></li>
                  <li><%= link_to 'ユーザでログイン', top_main_path , class:"link" %></li>
                <% end %>
              <% end %>
            <% end %>
          </ul>
        </nav>
      </header>
    <%= yield %>
  </body>
</html>
